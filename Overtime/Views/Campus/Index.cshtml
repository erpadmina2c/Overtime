@{
    ViewData["Title"] = "Campus";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
        <li class="breadcrumb-item active"><a href="/Campus/Index">Campus</a></li>
    </ol>
</nav>


 <div class="pallet" id="Campus">
    
         <div class="row">
             <div class="col-md-4">
                 <div class="form-group">
                     <button type="button" onclick="OpenModalForAddCampus();" class="btn btn-warning"> Create </button>
                 </div>
             </div>
         </div>
         <hr/>
         <div class="row">
             <div class="col-md-12" id="container">
             </div>
         </div>
 </div>


<!-- 🔹 Campus Modal -->
<div class="modal fade" id="CampusModal" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Campus</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <div class="container">

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <input type="hidden" id="c_id" value="0" />
                                <label class="control-label">Campus Name</label>
                                <input class="form-control" type="text" id="c_name" />
                            </div>
                        </div>
                    </div>

                    <div class="row" id="c_active_yn_div">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label">Active Y/N</label>
                                <select class="form-control" id="c_active_yn">
                                    <option value="">Please Select</option>
                                    <option value="Y">Active</option>
                                    <option value="N">Inactive</option>
                                </select>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button"
                        class="btn btn-success"
                        onclick="addOrUpdateCampus();">
                    Save
                </button>
            </div>

        </div>
    </div>
</div>
