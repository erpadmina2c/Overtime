@model System.Data.DataTable
@using System.Data;
@{
    ViewData["Title"] = "MonthReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .status_A {
        background-color: red;
    }
    .status_P {
        background-color: green;
    }
    td.status_N\/A {
        background-color: #f3f31b5e;
    }
    td {
        background: #e6e5cf;
        font-size: 10px;
        font-weight: bold;
        font-family: monospace;
        padding: 3px !important;
    }
    th {
        font-size: 10px;
        font-weight: bold;
        font-family: monospace;
        padding: 3px !important;
    }
</style>
<div class="container-fluid" style="margin-top:10px;">
    <div class="card">
        <div class="card-body">
            <div class="page-header">
                <h3>MonthReport</h3>
            </div>

            <div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <div class="form-group">
                                <label class="control-label">Date Range</label>
                                <input id="attdatarange" class="form-control" style="background: #fff; cursor: pointer; padding: 5px 10px; border: 1px solid #ccc; width: 100%" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-1">
                        <div class="form-group" align="justify">
                            <label class="control-label"></label>
                            <input type="submit" onclick="GetMonthReport();" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
                <hr />
                <div class="card">
                    <div class="card-body" id="container">


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
