
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
        <li class="breadcrumb-item active"><a href="/Accomodation/Index">Accomodation</a></li>
    </ol>
</nav>
<div class="card">
    <div class="card-body">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label">Accomodation Name</label>
                            <input class="form-control" name="name" id="name" />
                        </div>
                    </div>
                    <div class="col-md-2" align="center">
                        <div class="form-group">

                            <button type="button" onclick="getAccomodations();" style="margin-top:25px;" class="btn btn-primary"> Search</button>
                        </div>
                    </div>
                    <div class="col-md-4" align="center">
                    <div class="form-group">
                            <button type="button" onclick="OpenModalForAddAccommodation();" style="margin-top:25px;" class="btn btn-warning  pull-right  ">Add </button>
                    </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12" id="container">

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="AccomodationModal" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Accomodation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row" id="filter">

                        <div class="col-md-4">

                            <div class="form-group">

                                <input type="hidden" id="ac_id" value="0" />
                                <label class="control-label">Accomodation Name</label>
                                <input class="form-control" type="text" id="ac_name" />

                            </div>

                        </div>
                    </div>
                    <div class="row">

                        <div class="col-md-4">

                            <div class="form-group">


                                <label class="control-label">First Punching Type</label>
                                <select class="form-control" id="ac_first_punch_type">
                                    <option value="">Please Select</option>
                                    <option value="In">In</option>
                                    <option value="Out">Out</option>
                                </select>

                            </div>

                        </div>
                    </div>
                    <div class="row">

                        <div class="col-md-4">

                            <div class="form-group" >


                                <label class="control-label" id="lbl_ac_active_yn">Active Y/N</label>
                                <select class="form-control" id="ac_active_yn">
                                    <option value="">Please Select</option>
                                    <option value="Y">Active</option>
                                    <option value="N">Inactive</option>
                                </select>

                            </div>

                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" id="save" class="btn btn-success" onclick="AddOrUpdateAccomodation()">Save</button>
                </div>
            </div>
        </div>
    </div>
</div>
