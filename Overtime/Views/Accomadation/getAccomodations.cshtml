@model IEnumerable<Overtime.Models.Accomadation>

@{
    Layout = null;
}


@if (@ViewBag.Message == null)
{

    <div class="table-responsive">

        <table class="table table-hover text-nowrap" id="mytable" width="100%">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ac_name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ac_first_punch_type)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ac_active_yn)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ac_cre_by_Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ac_cre_date)
                    </th>
                    <th>

                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ac_name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ac_first_punch_type)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ac_active_yn)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ac_cre_by_Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ac_cre_date)
                        </td>
                        <td>
                            <button class="btn btn-warning" onclick="OpenModalForEditAccommodation(@item.ac_id,'@item.ac_name','@item.ac_first_punch_type','@item.ac_active_yn')">Edit</button>
                        </td>
                        <td>
                            <button class="btn btn-danger" onclick="DeleteAccomodation(@item.ac_id);">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
}
else
{

<div class="alert alert-danger" role="alert">
    @ViewBag.message
</div>
   
}

