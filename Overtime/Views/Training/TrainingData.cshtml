@model IEnumerable<Overtime.Models.List_Training>

@{
    Layout = null;
}


<table class="table nowrap" id="mytable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.tr_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tr_u_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tr_full_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tr_start_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tr_end_date)
            </th>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.tr_cre_by_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tr_cre_date)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.tr_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tr_u_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tr_full_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tr_start_date)
            </td>

            @if (item.tr_end_date == null)
            {
                <td>
                    <input type="date" class="form-control" id="@string.Format("tr_id{0}", @item.tr_id)"/>
                </td>
                <td> <button id="@string.Format("btn{0}", @item.tr_id)" onclick="FinishTraing(@item.tr_id)" class="btn btn-primary">Update</button></td>
            }
            else
            {   <td>
                    @Html.DisplayFor(modelItem => item.tr_end_date)
                </td>
                <td>
                   
                </td>
            }


            <td>
                @Html.DisplayFor(modelItem => item.tr_cre_by_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tr_cre_date)
            </td>
            <td>
                @if (item.tr_start_date >= DateTime.Now)
                {
                <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.tr_id">Edit</a>
                }
            </td>
            <td>
                @if (item.tr_start_date >= DateTime.Now)
                {
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.tr_id">Delete</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
