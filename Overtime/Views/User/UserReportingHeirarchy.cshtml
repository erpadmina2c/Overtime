
@{
    ViewData["Title"] = "UserReportingHeirarchy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
        <li class="breadcrumb-item active"><a href="/user/Index">Reporting Heirarchy</a></li>
    </ol>
</nav>


<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <label class="control-label">Users</label>
                    <select class="form-control" id="urh_u_id" asp-items="@(new SelectList(ViewBag.Users,"u_id","u_full_name"))">
                        <option value="">All</option>
                    </select>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <input type="hidden" id="wd_workflow_id" />
                    <label class="control-label">Reporting To</label>
                    <select class="form-control" id="urh_reporting_to" asp-items="@(new SelectList(ViewBag.Users,"u_id","u_full_name"))">
                        <option value="">All</option>
                    </select>
                </div>
            </div>
            <div class="col-md-2">
                <label>Priority</label>
                <input type="number" id="urh_priority" name="urh_priority" min="0" max="50" class="form-control"  value="">
            </div>
            <div class="col-md-2">
                <input type="button" id="Search" class="btn btn-primary" onclick="getUserReportingHeirarchy()"  style="margin-top: 25px;" value="Search" />
            </div>
            <div class="col-md-2">
                <input type="button" id="add" class="btn btn-success" onclick="AddUserReportingHeirarchy()"    style="margin-top: 25px;" value="Add" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-12" id="Container">

            </div>
        </div>
     </div>
  </div>
