
@{
    ViewData["Title"] = "ReviewLeaveApplications";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
        <li class="breadcrumb-item active"><a href="/Leave/ReviewLeaveApplications">Review Leave Application</a></li>
    </ol>
</nav>
<div class="container-fluid" style="margin-top: 10px;" id="ReviewLeaveApplications">
    <div class="row">
        <div class="col-md-12" id="Container">
        </div>
    </div>
</div>

<div class="modal fade bd-example-modal-xl" id="LeaveModal" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog  modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">Leave Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" >
               <div class="container-fluid" id="LeaveDetailContainer">

               </div>
            </div>
            <div class="modal-footer">
               
                <button type="button" class="btn btn-success" onclick="AuthorizeLeave()">Approve</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>