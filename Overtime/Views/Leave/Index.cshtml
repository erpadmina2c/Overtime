
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
        <li class="breadcrumb-item active"><a href="/Leave/index">Leave </a></li>
    </ol>
</nav>
<div class="container-fluid" style="margin-top: 10px;" id="Leave">
    <div class="row">
        <div class="col-md-12">
            <button class="btn btn-warning" onclick="OpenModalForCreateLeave()">Create</button>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-12" id="Container">
        </div>
    </div>
</div>
<div class="modal fade bd-example-modal-xl" id="LeaveModal" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h3 class="modal-title mx-auto" style="color:black;font-weight:bold;" id="exampleModalCenterTitle">Leave Application Form</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body" id="LeaveContainer">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <form method="post" enctype="multipart/form-data" id="createLeaveForm">
                                <fieldset>
                                    <legend style="color:black;font-weight:bold;">Personal Information </legend>
                                    <div class="form-row">
                                        <div class="form-group col-md-4">
                                            <input type="hidden" id="l_id" name="l_id" value="0"/>
                                            <input type="hidden" id="AttachmentRequired" name="AttachmentRequired" value="N"/>
                                            <label>Leave For</label>
                                            @if (ViewBag.LeaveRequestForOthers == null)
                                            {
                                                <select id="l_leave_for" name="l_leave_for" class="form-control" disabled>
                                                    <option value="@ViewBag.CurrentUser.u_id">@ViewBag.CurrentUser.u_name - @ViewBag.CurrentUser.u_full_name</option>
                                                </select>
                                            }
                                            else
                                            {
                                                <select id="l_leave_for" name="l_leave_for" class="form-control"
                                                        asp-items="@(new SelectList(ViewBag.Users, "u_id", "u_full_name"))" onchange="getRemainingLeaveOnly()">
                                                    <option value="0">Select User</option>
                                                </select>
                                            }
                                        </div>
                                        <div class="form-group col-md-4">
                                            <label>Department</label>
                                            <select name="l_dep_id" id="l_dep_id" class="form-control" asp-items="@(new SelectList(ViewBag.Departments,"d_id","d_description"))" onchange="onchangeLeaveType()">
                                                <option value="0">Select Department</option>
                                            </select>
                                        </div>
                                        <div class="form-group col-md-4">
                                            <label>Designation</label>
                                            <select name="l_designation" id="l_designation" class="form-control" asp-items="@(new SelectList(ViewBag.Designations,"ds_id","ds_name"))">
                                                <option value="0">Select Designation</option>
                                            </select>
                                        </div>
                                    </div>
                                    <br />
                                    <div class="form-row">
                                        <div class="col-md-12" id="remainingContainer">
                                        </div>
                                    </div>
                                </fieldset>
                                <br />
                                <fieldset>
                                    <legend style="color:black;font-weight:bold;">Leave Details</legend>
                                    <div class="form-row">
                                        <div class="form-group col-md-4">
                                            <label>Leave Type</label>
                                            <select name="l_type" id="l_type" class="form-control" asp-items="@(new SelectList(ViewBag.LeaveTypes,"LeavetypeId","Leavetype"))" onchange="onchangeLeaveType()">
                                                <option value="0">Select Leave Type</option>
                                            </select>
                                        </div>

                                    </div>
                                    <br />
                                    <div class="form-row">
                                        <div class="col-md-4">
                                            <div class="row">
                                                <div class="col-md-8">
                                                    <div class="form-group">
                                                        <label class="col-form-label" for="l_leave_from">Leave From</label>
                                                        <input type="date" class="form-control" placeholder="Leave From" id="l_leave_from" name="l_leave_from">
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        <label class="col-form-label d-block">&nbsp;</label>
                                                        <div class="input-group">
                                                            <div class="input-group-append">
                                                                <span class="" id="dayOfWeekFrom"></span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="row">
                                                <div class="col-md-8">
                                                    <div class="form-group">
                                                        <label class="col-form-label" for="l_leave_to">Leave To</label>
                                                        <input type="date" class="form-control" placeholder="Leave End" id="l_leave_to" name="l_leave_to">
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        <label class="col-form-label d-block">&nbsp;</label>
                                                        <div class="input-group">
                                                            <div class="input-group-append">
                                                                <span class="" id="dayOfWeekTo"></span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label class="col-form-label">Leave Days</label>
                                                <input type="number" class="form-control" id="l_leave_days" disabled min="0">
                                            </div>
                                        </div>
                                    </div>
                                </fieldset>
                                <br />
                                <div class="form-row" id="SalaryRequiredDiv">
                                    <div class="col-md-6">
                                        <label>Salary required for the month taking the leaves ?</label>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="l_salary_required" value="Y">
                                            <label class="form-check-label" for="inlineCheckbox1">Yes</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="l_salary_required" value="N" checked> 
                                            <label class="form-check-label" for="inlineCheckbox2">No</label>
                                        </div>
                                    </div>

                                </div>
                                <div id="SalaryRequestDetailDiv">
                                    <br />
                                    <fieldset>
                                        <legend style="color:black;font-weight:bold;">For Current Salary Request</legend>
                                        <div class="col-md-4">
                                            <label class="col-form-label" for="l_salary_month">Salary of Month</label>
                                            <input type="month" class="form-control" placeholder="Salary of Month" id="l_salary_month" name="l_salary_month">
                                        </div>
                                        <div class="col-md-4">
                                            <label class="col-form-label" for="l_required_amount">Required Amount</label>
                                            <input type="number" class="form-control" placeholder="Required Amount" id="l_required_amount" name="l_required_amount" min="0">
                                        </div>
                                        <div class="col-md-4">
                                            <label class="col-form-label" for="l_required_date">Required Date</label>
                                            <input type="date" class="form-control" placeholder="Required Date" id="l_required_date" name="l_required_date">
                                        </div>
                                    </fieldset>
                                </div>
                                <br />
                                <fieldset>
                                    <legend style="color:black;font-weight:bold;">Contact Detail During Leave </legend>
                                    <div class="form-row">
                                        <div class="form-group col-md-4">
                                            <label>Contact Number 1</label>
                                            <input class="form-control" type="tel" id="l_contact_no1" name="l_contact_no1" placeholder="+971-00000000" pattern="\+\d{1,3}-\d{1,4}-\d{1,4}-\d{4}">
                                        </div>
                                        <div class="form-group col-md-4">
                                            <label>Contact Number 2</label>
                                            <input class="form-control" type="tel" id="l_contact_no2" name="l_contact_no2" placeholder="+971-00000000" pattern="\+\d{1,3}-\d{1,4}-\d{1,4}-\d{4}">
                                        </div>
                                    </div>

                                    <div class="form-row">
                                        <label>Address</label>
                                        <textarea class="form-control" rows="5" id="l_address" name="l_address"></textarea>
                                    </div>
                                    <br />
                                </fieldset>
                                <fieldset>
                                    <legend style="color:black;font-weight:bold;">Other Details</legend>
                                    <div class="form-row">
                                        <label>Remarks</label>
                                        <textarea class="form-control" rows="5" id="l_reason" name="l_reason"></textarea>
                                    </div>
                                    <br />
                                    <div class="form-row" id="attdiv" >
                                        <label for="file">Choose a file:</label>
                                        <input type="file" id="files" name="files" class="form-control" multiple accept="pdf">
                                    </div>
                                </fieldset>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success ml-2" id="upd_btn" onclick="createOrUpdateLeave()" >Save</button>
                <button type="button" class="btn btn-secondary ml-2" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
