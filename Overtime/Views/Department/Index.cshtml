@model IEnumerable<Overtime.Models.Department>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table  class="table  table-responsive text-nowrap" id="mytable" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.d_description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.d_active_yn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.d_cre_by)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.d_cre_date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.d_description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.d_active_yn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.d_cre_by)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.d_cre_date)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.d_id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.d_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
