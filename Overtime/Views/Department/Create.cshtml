@model Overtime.Models.Department

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="card">
        <div class="card-body">
            <div class="page-header">
                <h2>Create Department</h2>
            </div>
            <div class="card">
                <div class="card-body">
                   
                  
                    <div class="row">
                        <div class="col-md-4">
                            <form asp-action="Create">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="d_description" class="control-label"></label>
                                    <input asp-for="d_description" class="form-control" />
                                    <span asp-validation-for="d_description" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="d_allow_overtime_yn" class="control-label"></label>
                                    <select asp-for="d_allow_overtime_yn" class="form-control" required>
                                        <option value="">Select Option</option>
                                        <option value="N">N</option>
                                        <option selected value="Y">Y</option>
                                    </select>
                                    <span asp-validation-for="d_allow_overtime_yn" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="d_allocation_yn" class="control-label"></label>
                                    <select asp-for="d_allocation_yn" class="form-control" required>
                                        <option value="">Select Option</option>
                                        <option value="N">N</option>
                                        <option selected value="Y">Y</option>
                                    </select>
                                    <span asp-validation-for="d_allocation_yn" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Create" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                    </div>

                    <div>
                        <a asp-action="Index">Back to List</a>
                    </div>

                    @section Scripts {
                        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
                    }
</div>
</div>
</div>
</div>