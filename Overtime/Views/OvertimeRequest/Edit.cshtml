@model Overtime.Models.OverTimeRequest

@{
    ViewData["Title"] = "Edit";
}
<div class="card">
    <div class="card-body">
        <div class="page-header">
            <h2>Edit OverTimeRequest</h2>
        </div>
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="rq_id" />
                            <div class="form-group">
                                <label asp-for="rq_description" class="control-label"></label>
                                <input asp-for="rq_description" class="form-control" />
                                <span asp-validation-for="rq_description" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="rq_dep_id" class="control-label"></label>
                                <select asp-for="rq_dep_id" class="form-control" asp-items="@(new SelectList(ViewBag.DepartmentList,"d_id","d_description"))"></select>
                                <span asp-validation-for="rq_dep_id" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="rq_start_time" class="control-label"></label>
                                <input asp-for="rq_start_time" class="form-control" />
                                <span asp-validation-for="rq_start_time" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="rq_end_time" class="control-label"></label>
                                <input asp-for="rq_end_time" class="form-control" />
                                <span asp-validation-for="rq_end_time" class="text-danger"></span>
                            </div>


                            <div class="form-group">
                                <input type="hidden" name="from" class="form-control" value="@ViewBag.from" />
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>

                <div>
                    <a asp-action="Index">Back to List</a>
                </div>
                </div>
            </div>
        </div>
    </div>

                @section Scripts {
                    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
                }
