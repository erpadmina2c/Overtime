@model Overtime.Models.OverTimeRequest

@{
    ViewData["Title"] = "Reports";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid" style="margin-top:10px;">
    <div class="card">
        <div class="card-body">

            <div class="page-header">
                <h2>Reports</h2>
            </div>
            <div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-4">

                        <div class="form-group">
                            <label asp-for="rq_dep_id" class="control-label"></label>
                            <select asp-for="rq_dep_id" id="rq_dep_id" class="form-control" asp-items="@(new SelectList(ViewBag.DepartmentList,"d_id","d_description"))">
                                <option value="">All</option>
                            </select>
                            <span asp-validation-for="rq_dep_id" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <div class="form-group">
                                <label class="control-label">Date Range</label>
                                <input id="reportrange" class="form-control" style="background: #fff; cursor: pointer; padding: 5px 10px; border: 1px solid #ccc; width: 100%" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="rq_no_of_hours" class="control-label"></label>
                            <input asp-for="rq_no_of_hours" id="rq_no_of_hours" class="form-control" />
                            <span asp-validation-for="rq_no_of_hours" class="text-danger"></span>
                        </div>
                    </div>

                </div>
                <div class="row">


                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="rq_cre_by" class="control-label"></label>
                            <select asp="rq_cre_by" id="rq_cre_by" class="form-control" asp-items="@(new SelectList(ViewBag.UserList,"u_id","u_name"))">
                                <option value="">All</option>
                            </select>
                            <span asp-validation-for="rq_cre_by" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="rq_cre_date" class="control-label"></label>
                            <input asp-for="rq_cre_date" id="rq_cre_date" class="form-control" />
                            <span asp-validation-for="rq_cre_date" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group" align="justify">
                            <label class="control-label"></label>
                            <input type="submit" onclick="overTimeRequestReport();" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
                <hr />
                <div class="card">
                    <div class="card-body" id="container">

                        
                    </div>
                    </div>
                </div>
                </div>
            </div>
</div>